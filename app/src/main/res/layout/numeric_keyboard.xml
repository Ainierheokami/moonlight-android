<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:baselineAligned="false">

    <!-- 数字区域：对齐传统小键盘布局 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <Button
            style="@style/FloatingKeyboardButtonEnhanced"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:tag="0x37"
            android:text="7" />

        <Button
            style="@style/FloatingKeyboardButtonEnhanced"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:tag="0x38"
            android:text="8" />

        <Button
            style="@style/FloatingKeyboardButtonEnhanced"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:tag="0x39"
            android:text="9" />

        <Button
            style="@style/FloatingKeyboardButtonEnhanced"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:tag="0x08"
            android:text="Bksp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <Button
            style="@style/FloatingKeyboardButtonEnhanced"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:tag="0x34"
            android:text="4" />

        <Button
            style="@style/FloatingKeyboardButtonEnhanced"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:tag="0x35"
            android:text="5" />

        <Button
            style="@style/FloatingKeyboardButtonEnhanced"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:tag="0x36"
            android:text="6" />

        <Button
            style="@style/FloatingKeyboardButtonEnhanced"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:tag="0x6A"
            android:text="*" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <Button
            style="@style/FloatingKeyboardButtonEnhanced"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:tag="0x31"
            android:text="1" />

        <Button
            style="@style/FloatingKeyboardButtonEnhanced"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:tag="0x32"
            android:text="2" />

        <Button
            style="@style/FloatingKeyboardButtonEnhanced"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:tag="0x33"
            android:text="3" />

        <Button
            style="@style/FloatingKeyboardButtonEnhanced"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:tag="0x6D"
            android:text="-" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <Button
            style="@style/FloatingKeyboardButtonEnhanced"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:tag="0x6E"
            android:text="." />

        <Button
            style="@style/FloatingKeyboardButtonEnhanced"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:tag="0x30"
            android:text="0" />

        <Button
            style="@style/FloatingKeyboardButtonEnhanced"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:tag="0x6F"
            android:text="/" />

        <Button
            style="@style/FloatingKeyboardButtonEnhanced"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:tag="0x6B"
            android:text="+" />

    </LinearLayout>

    <!-- 第三行：功能键 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <Button
            style="@style/FloatingKeyboardButtonEnhanced"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:tag="0x09"
            android:text="Tab" />

        <Button
            style="@style/FloatingKeyboardButtonEnhanced"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:tag="0x20"
            android:text="Space" />

        <Button
            style="@style/FloatingKeyboardButtonEnhanced"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:tag="0x0D"
            android:text="Enter" />

    </LinearLayout>

</LinearLayout> 
